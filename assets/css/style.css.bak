  }
}


/* =================================================
   PATCH: MOBILE CLOSE BUTTON VISIBILITY (v2)
   Ensures the close button stays visible above glass/blur layers
================================================= */
@media (max-width: 768px) {
  .main-nav {
    z-index: 2001; /* above header stacking contexts */
  }
  .nav-close {
    z-index: 2002;
    opacity: 1 !important;
    visibility: visible !important;
  }
  /* ensure close button is not covered by padding area */
  .main-nav { padding-top: 88px; }
}

/* =================================================
   UI FINISHING (Spacing • Typography • Hover)
   Safe overrides only (no content removed)
================================================= */

:where(a, button, input, textarea, select) {
  -webkit-tap-highlight-color: transparent;
}

:where(a) {
  transition: color 180ms var(--ease-out), opacity 180ms var(--ease-out);
}

:where(a:hover) { opacity: 0.95; }

:where(a:focus-visible, button:focus-visible, input:focus-visible, textarea:focus-visible, select:focus-visible) {
  outline: 3px solid color-mix(in srgb, var(--primary) 35%, transparent);
  outline-offset: 3px;
  border-radius: 10px;
}

body {
  font-size: clamp(15px, 1.1vw, 16px);
  line-height: 1.75;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Headings rhythm */
h1, h2, h3 {
  letter-spacing: -0.02em;
}
h1 { line-height: 1.15; }
h2 { line-height: 1.25; }
h3 { line-height: 1.3; }
p { margin: 0 0 14px; }

/* Container feels less “tight” on small screens */
.container {
  padding-left: clamp(18px, 4vw, 24px);
  padding-right: clamp(18px, 4vw, 24px);
}

/* Cards (used on harian/motivasi/perjuangan/pemikiran) */
.article-card {
  background: var(--white);
  border: 1px solid color-mix(in srgb, #0f172a 10%, transparent);
  border-radius: var(--radius-lg);
  padding: 22px 22px 20px;
  box-shadow: var(--shadow-sm);
  transition: transform 220ms var(--ease-out), box-shadow 220ms var(--ease-out), border-color 220ms var(--ease-out);
}
.article-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  border-color: color-mix(in srgb, var(--primary) 18%, transparent);
}
.article-card .meta {
  letter-spacing: 0.01em;
}

/* Dropdown hover feels smoother */
.dropdown-menu li a {
  border-radius: 10px;
  transition: background 180ms var(--ease-out), transform 180ms var(--ease-out), color 180ms var(--ease-out);
}
.dropdown-menu li a:hover {
  background: color-mix(in srgb, var(--primary) 9%, transparent);
  transform: translateX(2px);
}

/* Pagination polish (works with <a> or <span>) */
.pagination li a,
.pagination li span {
  transition: background 180ms var(--ease-out), color 180ms var(--ease-out), transform 180ms var(--ease-out);
  border-radius: 999px;
}
.pagination li a:hover {
  background: color-mix(in srgb, var(--primary) 10%, transparent);
  transform: translateY(-1px);
}

/* Buttons / form controls (contact page) */
button,
input,
textarea,
select {
  font: inherit;
}

input, textarea, select {
  background: var(--white);
  border: 1px solid color-mix(in srgb, #0f172a 12%, transparent);
  border-radius: var(--radius-md);
  padding: 12px 14px;
  transition: border-color 180ms var(--ease-out), box-shadow 180ms var(--ease-out);
}
input:focus, textarea:focus, select:focus {
  border-color: color-mix(in srgb, var(--primary) 35%, transparent);
  box-shadow: 0 0 0 4px color-mix(in srgb, var(--primary) 14%, transparent);
  outline: none;
}

/* Respect reduced motion */
@media (prefers-reduced-motion: reduce) {
  * { scroll-behavior: auto !important; }
  .site-header, .article-card, .dropdown-menu li a, .pagination li a { transition: none !important; }
  .article-card:hover { transform: none !important; }
}



/* ===== SITE SEARCH (HEADER) ===== */
.sr-only{
  position:absolute!important;
  width:1px;height:1px;
  padding:0;margin:-1px;
  overflow:hidden;
  clip:rect(0,0,0,0);
  white-space:nowrap;
  border:0;
}

.nav-search{
  display:flex;
  align-items:center;
  margin-left: 10px;
}

.site-search{
  display:flex;
  align-items:center;
  gap:8px;
  padding: 4px 6px;
  border: 1px solid var(--hf-border, #e5e7eb);
  border-radius: 999px;
  background: rgba(255,255,255,.55);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  transition: border-color .25s cubic-bezier(.2,.8,.2,1), background-color .25s cubic-bezier(.2,.8,.2,1), box-shadow .25s cubic-bezier(.2,.8,.2,1), padding .25s cubic-bezier(.2,.8,.2,1);
}

.site-search input{
  width: 180px;
  max-width: 32vw;
  height: 32px;
  border: 0;
  outline: none;
  background: transparent;
  font: inherit;
  color: inherit;
  padding: 0 6px;
}

.site-search input::placeholder{ opacity: .7; }

.site-search button{
  border: 0;
  cursor: pointer;
  height: 32px;
  padding: 0 10px;
  border-radius: 999px;
  font: inherit;
  /* samakan nuansa dengan hover menu */
  background: var(--nav-hover-bg, rgba(2,6,23,.05));
  color: var(--nav-text, inherit);
  transition: transform .18s ease, background-color .18s ease, box-shadow .18s ease;
}

.site-search button:hover{ transform: translateY(-1px); }
.site-search:focus-within{
  border-color: color-mix(in srgb, var(--hf-border, #e5e7eb) 30%, #2563eb);
  box-shadow: 0 0 0 4px rgba(37,99,235,.12);
  background: rgba(255,255,255,.75);
}

/* Premium: search ikut mengecil saat header shrink */
.site-header.is-scrolled .site-search{
  padding: 3px 5px;
  background: rgba(255,255,255,.45);
}
.site-header.is-scrolled .site-search input{
  width: 160px;
  height: 30px;
}
.site-header.is-scrolled .site-search button{
  height: 30px;
  padding: 0 9px;
}

/* Highlight kata kunci di hasil search */
mark{
  background: rgba(37,99,235,.18);
  color: inherit;
  padding: 0 .15em;
  border-radius: .25em;
}

/* Premium: shrink search sedikit saat header mengecil */
.site-header.is-scrolled .site-search{
  padding: 3px 5px;
  background: rgba(255,255,255,.5);
  border-color: var(--hf-border-scrolled, rgba(229,231,235,.7));
}
.site-header.is-scrolled .site-search input{
  width: 160px;
  height: 30px;
}
.site-header.is-scrolled .site-search button{
  height: 30px;
  padding: 0 10px;
  background: rgba(2,6,23,.055);
}

/* Mobile: search full-width inside menu panel */
@media (max-width: 900px){
  .nav-search{ width: 100%; margin: 12px 0 0; }
  .site-search{ width: 100%; justify-content: space-between; }
  .site-search input{ width: 100%; max-width: none; }
}

/* Search results highlight */
mark{
  background: rgba(37,99,235,.16);
  color: inherit;
  padding: 0 .15em;
  border-radius: .25em;
}


/* Brand (logo + name) — premium + always readable on hero */
.logo{
  display:flex;
  align-items:center;
  gap:10px;
  text-decoration:none;
}

.logo-img{
  width:40px;
  height:40px;
  object-fit:contain;
  flex:0 0 auto;
}

.logo-text{
  display:inline-flex;
  align-items:baseline;
  gap:8px;

  /* glass pill so text stays readable on top of hero image */
  padding:8px 12px;
  border-radius:999px;
  background: rgba(255,255,255,.55);
  border: 1px solid rgba(15, 23, 42, .08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 0 6px 18px rgba(2, 6, 23, .08);
}

.brand-main{
  font-weight:800;
  letter-spacing:-0.02em;
  color: var(--nav-text, #0f172a);
}

.brand-sep{
  opacity:.55;
  color: var(--nav-text, #0f172a);
}

.brand-sub{
  font-weight:600;
  opacity:.85;
  color: var(--nav-text, #0f172a);
}

/* shrink sync with header */
.site-header.is-scrolled .logo-img{
  width:34px;
  height:34px;
}

.site-header.is-scrolled .logo-text{
