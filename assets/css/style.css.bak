/* =================================================
   RESET & BASE
================================================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-main);
  background: var(--bg-light);
  color: var(--text-dark);
  line-height: 1.7;
  font-size: 16px;
}

a {
  text-decoration: none;
  color: inherit;
}

/* =================================================
   CONTAINER
================================================= */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

/* =================================================
   HEADER & NAVBAR
================================================= */
.site-header {
  background: var(--white);
  border-bottom: 1px solid #e5e7eb;
  position: relative;
  z-index: 1000;
  transition: background 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;

}

.nav-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80px;

  transition: height 320ms cubic-bezier(0.2, 0.8, 0.2, 1);
  will-change: height;
}


/* LOGO */
.logo img {
  height: 42px;

  transition:
    height 320ms cubic-bezier(0.2, 0.8, 0.2, 1),
    filter 320ms cubic-bezier(0.2, 0.8, 0.2, 1);
  will-change: height;
}


/* =================================================
   MAIN NAV (HORIZONTAL ONLY)
================================================= */
.main-nav > ul {
  display: flex; /* HANYA MENU UTAMA */
  list-style: none;
  gap: 32px;
}

.main-nav > ul > li {
  position: relative;
}

/* LINK MENU UTAMA */
.main-nav > ul > li > a {
  position: relative;
  /* sedikit lebih lebar supaya hover "terlihat" (premium) */
  padding: 8px 10px;
  border-radius: 10px;
  font-weight: 500;
  color: var(--text-dark);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  line-height: 1;
  transition: color 0.2s ease, background-color 0.2s ease;
}

.main-nav > ul > li > a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 0;
  height: 2px;
  background: var(--primary);
  transition: width 0.25s ease;
}

.main-nav > ul > li > a:hover::after,
.main-nav > ul > li > a.active::after {
  width: 100%;
}

.main-nav > ul > li > a:hover {
  color: var(--primary);
  background: var(--nav-hover-bg, rgba(0, 0, 0, 0.06));
}

/* =================================================
   DROPDOWN MENU (VERTIKAL FIX)
================================================= */
.dropdown {
  position: relative;
}

/* SUB MENU */
.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;

  /* KUNCI ANTI HORIZONTAL */
  display: block;

  background: var(--white);
  border: 1px solid #e5e7eb;
  border-radius: 6px;

  min-width: 200px;
  padding: 6px 0;
  list-style: none;

  opacity: 0;
  visibility: hidden;
  transform: translateY(6px);
  transition: opacity 0.2s ease, transform 0.2s ease;

  z-index: 999;
}

/* SHOW DROPDOWN */
.dropdown:hover > .dropdown-menu {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

/* ITEM DROPDOWN */
.dropdown-menu li {
  width: 100%;
}

.dropdown-menu li a {
  display: block;
  position: relative;

  padding: 8px 18px;
  font-size: 14px;
  line-height: 1.4;
  color: var(--text-dark);

  transition: background 0.2s ease, padding 0.2s ease;
}

/* HILANGKAN GARIS MENU UTAMA */
.dropdown-menu li a::after {
  display: none !important;
}

/* GARIS KIRI DROPDOWN */
.dropdown-menu li a::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 3px;
  height: 100%;
  background: var(--primary);
  opacity: 0;
  transition: opacity 0.2s ease;
}

/* HOVER DROPDOWN */
.dropdown-menu li a:hover {
  background: #f1f5f9;
  padding-left: 24px;
  color: var(--primary);
}

.dropdown-menu li a:hover::before {
  opacity: 1;
}

/* ACTIVE DROPDOWN */
.dropdown-menu li a.active {
  background: #e2e8f0;
  font-weight: 600;
}

.dropdown-menu li a.active::before {
  opacity: 1;
}

/* =================================================
   HERO SECTION
================================================= */
.hero {
  padding: 120px 0;
  background: linear-gradient(rgba(15, 23, 42, 0.85), rgba(15, 23, 42, 0.85)),
    url("../images/hero.jpg") center / cover no-repeat;
  color: var(--white);
}

.hero-content {
  max-width: 720px;
}

.hero h1 {
  font-size: 48px;
  font-weight: 700;
  line-height: 1.25;
}

.hero p {
  margin-top: 16px;
  font-size: 18px;
  color: #e5e7eb;
}

/* =================================================
   CONTENT
================================================= */
.content {
  padding: 80px 0;
}

.content h2 {
  font-size: 32px;
  font-weight: 600;
  margin-bottom: 12px;
}

.subtitle {
  max-width: 640px;
  color: var(--text-light);
}

/* =================================================
   FOOTER
================================================= */
.site-footer {
  background: var(--white, #fff);
  color: var(--text-dark, #111);
  border-top: 1px solid #e5e7eb;

  padding: 32px 0;
  text-align: center;
  font-size: 14px;
}

/* =================================================
   STICKY NAVBAR
================================================= */
.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;

  /* default: solid like header */
  background: rgba(255, 255, 255, 0.98);
  border-bottom: 1px solid rgba(229, 231, 235, 1);

  /* smoother feel */
  transition:
    background-color 320ms cubic-bezier(0.2, 0.8, 0.2, 1),
    border-color 320ms cubic-bezier(0.2, 0.8, 0.2, 1),
    box-shadow 320ms cubic-bezier(0.2, 0.8, 0.2, 1),
    backdrop-filter 320ms cubic-bezier(0.2, 0.8, 0.2, 1),
    -webkit-backdrop-filter 320ms cubic-bezier(0.2, 0.8, 0.2, 1);
  will-change: background-color, box-shadow, backdrop-filter;
}


/* kondisi normal */
.nav-wrapper {
  height: 80px;
  transition: height 0.25s ease;
}

/* KONDISI SCROLL */
.site-header.is-scrolled {
  /* glassy premium look */
  background: rgba(255, 255, 255, 0.82);
  border-color: rgba(229, 231, 235, 0.85);

  -webkit-backdrop-filter: saturate(180%) blur(12px);
  backdrop-filter: saturate(180%) blur(12px);

  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
}


.site-header.is-scrolled .nav-wrapper {
  height: 64px;
}

/* logo ikut mengecil */
.site-header.is-scrolled .logo img {
  height: 36px;
}

/* =================================================
   MOBILE NAVBAR
================================================= */

/* hamburger hidden di desktop */
.nav-toggle {
  display: none;
  flex-direction: column;
  gap: 6px;
  background: none;
  border: none;
  cursor: pointer;
}

.nav-toggle span {
  width: 24px;
  height: 2px;
  background: var(--text-dark);
}

/* =====================
   MOBILE BREAKPOINT
===================== */
@media (max-width: 768px) {
  /* tampilkan hamburger */
  .nav-toggle {
    display: flex;
  }

  /* sembunyikan menu desktop */
  .main-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 80%;
    max-width: 320px;
    height: 100vh;

    background: var(--white);
    padding: 100px 24px 24px;

    transition: right 0.3s ease;
    box-shadow: -10px 0 25px rgba(0, 0, 0, 0.08);
  }

  /* menu aktif */
  .main-nav.active {
    right: 0;
  }

  /* menu jadi vertikal */
  .main-nav > ul {
    flex-direction: column;
    gap: 24px;
  }

  /* dropdown reset */
  .dropdown-menu {
    position: static;
    opacity: 1;
    visibility: visible;
    transform: none;
    border: none;
    box-shadow: none;
    padding-left: 16px;
    display: none;
  }

  /* dropdown aktif */
  .dropdown.open .dropdown-menu {
    display: block;
  }

  /* matikan hover desktop */
  .dropdown:hover .dropdown-menu {
    display: none;
  }

  /* matikan garis bawah */
  .main-nav > ul > li > a::after {
    display: none;
  }
}

/* =================================================
   PAGE HEADER (CATATAN)
================================================= */
