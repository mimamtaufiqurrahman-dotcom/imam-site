/* =================================================
   PAGINATION (FIXED & CENTERED)
================================================= */
.pagination {
  margin: 64px 0 80px;
  text-align: center;
}

.pagination ul {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.pagination li {
  display: block;
}

.pagination li a,
.pagination li span {
  display: inline-block;
  min-width: 38px;
  padding: 10px 14px;
  font-size: 14px;
  border-radius: 6px;
  border: 1px solid #e5e7eb;
  color: var(--text-dark);
  background: #fff;
  text-decoration: none;
}

.pagination li a:hover {
  background: var(--primary);
  color: #fff;
  border-color: var(--primary);
}

.pagination li.active span {
  background: var(--primary);
  color: #fff;
  border-color: var(--primary);
}

.pagination li.disabled span {
  opacity: 0.4;
  cursor: not-allowed;
}

